{
  "manifest_version": 3,
  "name": "AO3 In-page Bookmark",
  "version": "1.0",
  "description": "Improve navigating experience on AO3's work page, helps to keep track on reading progress with in-page bookmark and progress visuals",
  "icons":  {
    "128": "imgs/bavy_w.png"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "imgs/bavy_w.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://archiveofourown.org/works/*",
        "https://archiveofourown.org/chapters/*"
      ],
      "css": ["css/content.css"],
      "js": ["js/chunk-vendors.js", "js/content.js"]
    }
  ]
}
