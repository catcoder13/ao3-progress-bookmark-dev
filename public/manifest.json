{
  "manifest_version": 3,
  "name": "AO3 Progress Bookmark",
  "version": "0.1.0",
  "description": "Bookmarking AO3's works precisely at the page scroll position.",
  "icons":  {
    "128": "imgs/ipb.png",
    "32": "imgs/ipb32.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "imgs/ipb.png",
      "32": "imgs/ipb32.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://archiveofourown.org/works/*",
        "https://archiveofourown.org/chapters/*"
      ],
      "exclude_matches": [
        "https://archiveofourown.org/works",
        "https://archiveofourown.org/works/search*",
        "https://archiveofourown.org/works/*/comments",
        "https://archiveofourown.org/works/*/edit*",
        "https://archiveofourown.org/works/*/chapters/new",
        "https://archiveofourown.org/works/*/chapters/manage",
        "https://archiveofourown.org/works/*/chapters/comments"
      ],
      "css": ["css/content.css"],
      "js": ["js/chunk-vendors.js", "js/content.js"]
    }
  ]
}
