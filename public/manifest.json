{
  "manifest_version": 3,
  "name": "AO3 In-page Bookmark",
  "version": "1.0",
  "description": "Improve reading experience on AO3, helps to keep track on reading progress with in-page bookmark, and more.",
  "icons":  {
    "128": "imgs/bavy_w.png"
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "imgs/bavy.png"
    }
  },
  "host_permissions": [
    "https://archiveofourown.org/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://archiveofourown.org/works/*"],
      "css": ["content/content.css"],
      "js": ["content/content.js"]
    }
  ]
}
